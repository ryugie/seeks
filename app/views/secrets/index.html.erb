<h1>ALL SECRETS</h1>

<hr>
<% if @secrets %>
	<% @secrets.each do |s| %>
		<%= s.content %> | <%= s.created_at %> | <%= s.likes.count %> likes
			<form action='/secrets/<%= s.id %>' method='post'>
				<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
				<input name="_method" value="delete" type="hidden">
				<button type="submit" id='Delete'>Delete</button>
			</form>
			<form action='/likes' method='post'>
				<input type="hidden" name='sekritz' value='<%= s.id %>'>
				<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
				<button type="submit" id='Like'>Like</button>
			</form>
			<% if @likes %>
				<form action='/likes/<%= s.id %>' method='post'>
					<input type="hidden" name='unsekritz' value='<%= s.id %>'> 
					<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
					<input name="_method" value="delete" type="hidden">
					<button type="submit" id='Unlike'>Unlike</button>
				</form>
			<% end %>
		<hr>
	<% end %>
<% end %>


<form action='/sessions/log' method='post'>
	<button type='submit' name='log out'>Log Out</button>
</form>